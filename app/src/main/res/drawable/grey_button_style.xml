<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="@color/gray_dark" />
<!--            <gradient android:startColor="@color/button_gradient_animation"-->
<!--                android:endColor="@color/button_gradient_animation"/>-->
            <gradient android:angle="225"
                android:startColor="@color/grey_light"
                android:endColor="@color/grey_light" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="@color/dark_grey" />
            <solid android:color="@color/dark_grey"/>
            <gradient android:angle="-90"
                android:startColor="@color/dark_grey"
                android:endColor="@color/grey_light" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip"/>
            <stroke android:width="1dip" android:color="@color/dark_grey" />
            <gradient android:angle="-90"
                android:startColor="@color/dark_grey"
                android:endColor="@color/dark_grey" />
        </shape>
    </item>
</selector>